package selfProgramming;
import java.util.Scanner;
public class LogicalOperator {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter amount : ");
		int amount = sc.nextInt();
		
		System.out.println("Enter balance : ");
		int   balance = sc.nextInt();
		
		//Expressions that use logical operators can form complex conditions
		if  ((amount <= 1000.0) && (amount <= balance))
		{   balance = balance - amount;
			System.out.println("Acct new balance = " + balance);
		}
		
		else
			System.out.println("Withdrawal amount of more than RM1000.00 is not allowed.");
	}

}
